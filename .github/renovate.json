{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 3,
  "argocd": {
    "managerFilePatterns": [
      "/funland/[^/]+/[^/]+/application\\.yaml/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/manifests/[^/]+/[^/]+/deployment\\.yaml/",
      "/funland/[^/]+/[^/]+/deployment\\.yaml/"
    ]
  }
}