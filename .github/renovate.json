{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 3,
  "argocd": {
    "managerFilePatterns": [
      "/funland/[^/]+/[^/]+/application\\.yaml/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/manifests/[^/]+/[^/]+/deployment\\.yaml/",
      "/funland/[^/]+/[^/]+/deployment\\.yaml/"
    ]
  },
  "regexManagers": [
    {
      "description": "Update image tags in ArgoCD Application Helm values",
      "fileMatch": ["/funland/[^/]+/[^/]+/application\\.yaml$"],
      "matchStrings": [
        "image:\\s*\\n\\s*tag:\\s*(?<currentValue>.*?)\\s"
      ],
      "depNameTemplate": "ghcr.io/immich-app/immich",
      "datasourceTemplate": "docker"
    }
  ]
}
